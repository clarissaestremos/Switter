<h1>Register</h1>

<%= form_for :register, url: registers_path do |f| %>


  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>
 
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </p>
 
  <p>
    <%= f.submit "Sign up" %>
  </p>
<% end %>

<%= link_to 'Back', swits_path %>