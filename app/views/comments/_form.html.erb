<div id="form_comment">
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :placeholder => 'Write a Comment..' %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

</div>